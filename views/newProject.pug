extends layout

block contain
    .contenido-principal
        h1 #{nombrePagina}

        if errores 
            each error in errores 
                .alerta= error.texto

        form.agregar-proyecto(action="/newProject" method="POST")
            .campo
                label(for="nombre") Titulo:
                input(type="text" id="nombre" name="nombre" placeholder="Nombre del titulo")
            .campo.enviar
                input(type="submit" value="Agregar" class="boton")
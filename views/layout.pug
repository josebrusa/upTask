<!doctype html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/styles/styles.css")
        link(rel="stylesheet", href="/css/normalize.css")
        link(rel="stylesheet", href="/css/app.css")
        title= nombrePagina
    body
        header.barra
            h1 upTask! - Administrador de Projectos
            a(href="#") Cerrar Sesion

        main.contenedor
            aside.contenedor-proyectos
                .panel.crear-proyecto
                    a(href="/newProject" class="boton")
                        p.titulonp Nueva Tarea
                        span ‚úçüèΩ
                .panel.lista-proyectos
                    h2 Tareas
                    ul#proyectos.proyectos
                        if(proyectos.length)
                            each proyecto in proyectos
                                li
                                    a(href=`/proyectos/${proyecto.url}`)= proyecto.nombre
            block contain

            //- pre= vardump(proyectos)
        script(src="/dist/bundle.js")
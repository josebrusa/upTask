mixin crearProyecto(proyecto = {})

        form.agregar-proyecto(action=`/newProject/${proyecto.id || ''}` method="POST")
            .campo
                label(for="nombre") Titulo:
                input(value=proyecto.nombre type="text" id="nombre" name="nombre" placeholder="Nombre del titulo")
            .campo.enviar
                input(type="submit" value=`${proyecto.nombre ? 'Guardar' : 'Agregar'}` class="boton")